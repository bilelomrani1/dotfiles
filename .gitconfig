# Local/private config goes in the include
[user]
	name = Bilel Omrani
	email = bilel.omrani@illuin.tech
[hub]
        protocol = https
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
        editor = code --wait
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[diff]
        mnemonicPrefix = true
        renames = true
        tool = vscode
[difftool "vscode"]
        cmd = code --wait --diff $LOCAL $REMOTE
[help]
        autocorrect = 1
[push]
        default = simple
[credential]
	helper = osxkeychain
	helper = /usr/local/share/gcm-core/git-credential-manager-core
[credential "https://dev.azure.com"]
	useHttpPath = true

[pull]
	rebase = true
[lfs]
	storage = /Users/bilelomrani/git-lfs
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
